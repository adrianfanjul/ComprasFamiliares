<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="es.adrianfg.comprasfamiliares.presentation.features.groups.vm.CreateGroupViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/createGroupContentRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/create_group_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/titles_vertical_margin"
            android:gravity="center"
            android:text="@string/create_group_title"
            android:textAppearance="@style/TextAppearance.Compras.Headline3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/createGroupInputLayoutName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="@dimen/titles_vertical_margin"
            android:gravity="center"
            android:hint="@string/createGroupInputLayoutNameText"
            app:endIconMode="clear_text"
            app:errorEnabled="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/create_group_title">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/createGroupInputEmail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@={viewModel.name}"
                android:textAppearance="?comprasBody16Inverse"
                android:textColor="@color/secondaryTextColor" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/createGroupInputLayoutDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="@dimen/titles_vertical_margin"
            android:gravity="center"
            android:hint="@string/createGroupInputLayoutDescriptionText"
            app:endIconMode="clear_text"
            app:errorEnabled="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/createGroupInputLayoutName">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/createGroupInputDescription"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@={viewModel.description}"
                android:textAppearance="?comprasBody16Inverse"
                android:textColor="@color/secondaryTextColor" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/create_group_save_btn"
            style="?comprasButton_filled_round"
            android:layout_marginHorizontal="50dp"
            android:layout_marginVertical="24dp"
            android:text="@string/register_save_btn"
            app:icon="@drawable/ic_save"
            app:iconGravity="textStart"
            android:enabled="@{viewModel.enableBtn}"
            android:onClick="@{()-> viewModel.create()}"
            app:layout_constraintBottom_toTopOf="@+id/create_group_exit_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/create_group_exit_btn"
            style="?comprasButton_filled_round"
            android:layout_marginHorizontal="50dp"
            android:layout_marginVertical="24dp"
            android:text="@string/register_exit_btn"
            app:icon="@drawable/ic_back"
            app:iconGravity="textStart"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>