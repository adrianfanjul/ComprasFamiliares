<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ComprasFamiliares" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorError">@color/colorOnError</item>
        <!-- Secondary brand color. -->
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryDarkColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- TextInputLayout -->
        <item name="textAppearanceSubtitle1">@style/TextAppearance.App.Subtitle1</item>
        <item name="textAppearanceCaption">@style/TextAppearance.App.Caption</item>

        <!-- Customize your theme here. -->
        <item name="comprasH1">@style/TextAppearance.Compras.Headline1</item>
        <item name="comprasH2">@style/TextAppearance.Compras.Headline2</item>
        <item name="comprasH3">@style/TextAppearance.Compras.Headline3</item>
        <item name="comprasH4">@style/TextAppearance.Compras.Headline4</item>
        <item name="comprasH5">@style/TextAppearance.Compras.Headline5</item>
        <item name="comprasH6">@style/TextAppearance.Compras.Headline6</item>
        <item name="comprasH4Inverse">@style/TextAppearance.Compras.Headline4.Inverse</item>
        <item name="comprasH5Inverse">@style/TextAppearance.Compras.Headline5.Inverse</item>
        <item name="comprasH6Inverse">@style/TextAppearance.Compras.Headline6.Inverse</item>
        <item name="comprasBody16">@style/TextAppearance.Compras.Body1</item>
        <item name="comprasBody14">@style/TextAppearance.Compras.Body2</item>
        <item name="comprasBody12">@style/TextAppearance.Compras.Body3</item>
        <item name="comprasBody16Inverse">@style/TextAppearance.Compras.Body1.Inverse</item>
        <item name="comprasBody14Inverse">@style/TextAppearance.Compras.Body2.Inverse</item>
        <item name="comprasButton_filled">@style/Button.Filled</item>
        <item name="comprasButton_filled_round">@style/Button.Filled.Rounded</item>
        <item name="comprasButton_filled_round_small">@style/Button.Filled.Rounded.Small</item>
        <item name="comprasButton_filled_cut">@style/Button.Filled.Cut</item>
        <item name="comprasButton_outline">@style/Button.Outlined</item>
    </style>

    <style name="Theme.ComprasFamiliares.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextAppearance.App.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="TextAppearance.App.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="Theme.ComprasFamiliares.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ComprasFamiliares.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>